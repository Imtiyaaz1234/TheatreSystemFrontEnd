<div class="update_employee">
    <form action = "/admin/updateemployee" method="POST">
        <input type="text" value='${employee.employeeCnp}' name="employeeCnp" placeholder="CNP"  required="required" pattern="[12][0-9]{12}" />
        <input type="text" value='${employee.employeeName}' name="employeeName" placeholder="Name" required="required" />
        <input type="email" value='${employee.employeeEmail}' name="employeeEmail" placeholder="Email" required="required" />
        <input type="text" value='${employee.employeePhone}' name ="employeePhone" placeholder="07xxxxxxxx" required="required" pattern="[07][0-9]{9}">
        <input type="text" value='${employee.employeeAddress}' name="employeeAddress" placeholder="Address" required="required" />
        <input type="hidden" value='${employee.employeeNumber}' name = "search"/>
        <button type="submit" class="btn btn-primary btn-block btn-large">Submit</button>
        <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}" />
    </form>

</div>
